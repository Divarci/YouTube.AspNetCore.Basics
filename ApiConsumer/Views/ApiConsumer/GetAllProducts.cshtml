@model List<Product>

@{
    ViewData["Title"] = "GetAllProducts";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">NAME</th>
            <th scope="col">QUANTITY</th>
            <th scope="col">PROCCESS</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td scope="row">@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Quantity</td>
                <td>
                    <a asp-controller="ApiConsumer" asp-action="ProductUpdate" asp-route-id=@product.Id class="btn btn-outline-warning">Edit</a>
                    <a asp-controller="ApiConsumer" asp-action="ProductDelete" asp-route-id=@product.Id class="btn btn-outline-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-controller="ApiConsumer" asp-action="ProductCreate" class="btn btn-success">Create New Item</a>
