@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using InitialStart.Controllers
@model Person


@{
    ViewData["Title"] = "AddClient";
}

<h1>AddClient</h1>

<form asp-action="AddClient" asp-controller="ModelBinding" method="post">

    <input type="text" asp-for="Name" placeholder="Enter a name" />
    <br/>
    <input type="text" asp-for="Age" placeholder="Enter age" />
    <br />
    <input type="text" asp-for="Job" placeholder="Enter Job" />
    <button>Send</button>
</form>